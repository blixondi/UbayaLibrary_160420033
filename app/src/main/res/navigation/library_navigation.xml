<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/library_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.shem.ubayalibrary.view.LoginFragment"
        android:label="UBAYA Library - Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/actionHomeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/actionRegisterFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.shem.ubayalibrary.view.RegisterFragment"
        android:label="UBAYA Library - Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/actionLoginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shem.ubayalibrary.view.HomeFragment"
        android:label="UBAYA Library"
        tools:layout="@layout/fragment_home" />
</navigation>